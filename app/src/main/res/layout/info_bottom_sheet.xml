<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_rounded_menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tùy chọn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/btn_add_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin người gửi"
        android:drawablePadding="16dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@android:drawable/ic_menu_edit" />
        
    <TextView
        android:id="@+id/btn_system_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm vào danh bạ điện thoại"
        android:drawablePadding="16dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/btn_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu trữ cuộc trò chuyện"
        android:drawablePadding="16dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@android:drawable/ic_menu_save" />

    <TextView
        android:id="@+id/btn_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chặn số này"
        android:textColor="#D32F2F"
        android:drawablePadding="16dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@android:drawable/ic_menu_close_clear_cancel" />
        
    <TextView
        android:id="@+id/btn_make_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt làm mặc định"
        android:drawablePadding="16dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@android:drawable/ic_menu_preferences" />

</LinearLayout>