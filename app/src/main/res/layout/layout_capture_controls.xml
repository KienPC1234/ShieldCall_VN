<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/shield_surface">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_capture_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:fabSize="mini"
            android:backgroundTint="@color/shield_primary_container"
            app:tint="@color/shield_on_primary_container"
            android:src="@android:drawable/ic_menu_camera"
            app:elevation="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chụp"
            android:textColor="@color/shield_on_surface"
            android:textSize="10sp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_finish_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/shield_success"
            app:tint="@color/white"
            android:src="@android:drawable/ic_menu_send"
            app:elevation="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:layout_marginTop="2dp"
            android:textColor="@color/shield_on_surface"
            android:textSize="10sp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>