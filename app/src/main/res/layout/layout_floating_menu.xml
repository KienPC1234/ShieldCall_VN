<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_rounded_menu">

    <ImageButton
        android:id="@+id/btn_chat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:tooltipText="Chat AI"
        android:tint="#2196F3"/>
    
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginVertical="4dp"/>

    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_btn_speak_now"
        android:tooltipText="Ghi âm"
        android:tint="#F44336"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginVertical="4dp"/>

    <ImageButton
        android:id="@+id/btn_screenshot"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_camera"
        android:tooltipText="Chụp màn hình"
        android:tint="#FF9800"/>

</LinearLayout>