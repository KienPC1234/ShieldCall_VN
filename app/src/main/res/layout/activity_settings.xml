<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shield_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Cài đặt ShieldCall"
            app:titleTextColor="@color/shield_on_primary"
            android:background="@color/shield_primary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Protection Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo vệ"
                android:textColor="@color/shield_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/shield_surface">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_protection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kích hoạt bảo vệ cuộc gọi"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tự động cảnh báo khi có cuộc gọi lừa đảo"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="-4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_sensitivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tăng độ nhạy"
                        android:textSize="16sp"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_parent_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chế độ phụ huynh"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Debug Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hệ thống"
                android:textColor="@color/shield_primary"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="16dp"
                app:cardBackgroundColor="@color/shield_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_debug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chế độ Gỡ lỗi (Debug)"
                        android:textSize="16sp"/>
                        
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hiển thị log chi tiết để kiểm tra lỗi"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Quay lại"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>