<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Hồ sơ cá nhân"
        app:titleTextAppearance="@style/TextAppearance.ShieldCall.Title"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/md_theme_light_secondaryContainer">

                    <ImageView
                        android:id="@+id/img_profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_profile_initial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="U"
                        android:textColor="@color/md_theme_light_onSecondaryContainer"
                        android:textSize="48sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/btn_edit_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_circle_primary"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:elevation="4dp" />
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Biệt danh (Nickname)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Lưu thay đổi"
                style="@style/Widget.Material3.Button" />
                
        </LinearLayout>
    </ScrollView>
</LinearLayout>
